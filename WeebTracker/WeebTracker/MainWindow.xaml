<Window x:Class="WeebTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WeebTracker.ViewModels"
        xmlns:views="clr-namespace:WeebTracker.Views"
        Title="Bibliothek"
        Height="450"
        Width="800">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <DockPanel>

        <Grid DockPanel.Dock="Top" Background="#EEE" Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Hinzufügen"
                    Margin="5"
                    Padding="8,4"
                    Command="{Binding ShowAddCommand}"/>

            <Button Grid.Column="1"
                    Content="Manga"
                    Margin="5"
                    Padding="8,4"
                    Command="{Binding ShowMangaCommand}"/>

            <Button Grid.Column="2"
                    Content="Anime"
                    Margin="5"
                    Padding="8,4"
                    Command="{Binding ShowAnimeCommand}"/>

            <Button Grid.Column="4"
                    Content="Statistik"
                    Margin="5"
                    Padding="8,4"
                    Command="{Binding ShowStatsCommand}"/>
        </Grid>

        <Grid>
            <views:MangaListView
                Visibility="{Binding IsMangaVisible, Converter={StaticResource BoolToVis}}"/>
            <views:AnimeListView
                Visibility="{Binding IsAnimeVisible, Converter={StaticResource BoolToVis}}"/>
        </Grid>
    </DockPanel>
</Window>
